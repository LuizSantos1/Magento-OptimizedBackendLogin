<config>
    <modules>
        <SchumacherFM_OptBeLogin>
            <version>1.0.0</version>
        </SchumacherFM_OptBeLogin>
    </modules>

    <global>
        <models>
            <optbelogin>
                <class>SchumacherFM_OptBeLogin_Model</class>
            </optbelogin>
        </models>
        <blocks>
            <optbelogin>
                <class>SchumacherFM_OptBeLogin_Block</class>
            </optbelogin>
        </blocks>
        <helpers>
            <optbelogin>
                <class>SchumacherFM_OptBeLogin_Helper</class>
            </optbelogin>
        </helpers>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <SchumacherFM_OptBeLogin>
                    <files>
                        <default>SchumacherFM_OptBeLogin.csv</default>
                    </files>
                </SchumacherFM_OptBeLogin>
            </modules>
        </translate>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <optbelogin_adminhtml_block_html_before>
                        <type>singleton</type>
                        <class>SchumacherFM_OptBeLogin_Model_Observer_AdminhtmlBlock</class>
                        <method>alterEavBlockTemplate</method>
                    </optbelogin_adminhtml_block_html_before>
                </observers>
            </adminhtml_block_html_before>

        </events>
    </adminhtml>
</config>